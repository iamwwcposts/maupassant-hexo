.widget
  .widget-title
    i(class='fa fa-external-link')= ' ' + __('blogroll')
  - for (var i in theme.links)
    div.icon-container
      svg(class="icon" aria-hidden="true")
        use(xlink:href='#' + theme.links[i].icon)
      a(class="link" href=theme.links[i].url title=theme.links[i].title target='_blank') #{theme.links[i].title}
